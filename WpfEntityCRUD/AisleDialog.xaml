<Window x:Class="WpfEntityCRUD.AisleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEntityCRUD"
        mc:Ignorable="d"
         Title="Add Aisle" Height="250" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Aisle Name -->
        <TextBlock Text="Aisle Name:" 
               FontWeight="SemiBold" 
               VerticalAlignment="Center" 
               Margin="5"/>
        <TextBox x:Name="AisleNameTextBox" 
             Grid.Column="1" 
             Margin="5" 
             Padding="5" 
             Height="30" 
             BorderBrush="LightGray" 
             BorderThickness="1" 
             Background="#F9F9F9" 
          />

        <!-- Depth -->
        <TextBlock Text="Depth:" 
               Grid.Row="1" 
               FontWeight="SemiBold" 
               VerticalAlignment="Center" 
               Margin="5"/>
        <TextBox x:Name="LayerCountTextBox" 
             Grid.Row="1" 
             Grid.Column="1" 
             Margin="5" 
             Padding="5" 
             Height="30" 
             BorderBrush="LightGray" 
             BorderThickness="1" 
             Background="#F9F9F9" 
           />

        <!-- Width -->
        <TextBlock Text="Width:" 
               Grid.Row="2" 
               FontWeight="SemiBold" 
               VerticalAlignment="Center" 
               Margin="5"/>
        <ComboBox x:Name="CellCountTextBox" 
              Grid.Row="2" 
              Grid.Column="1" 
              Margin="5" 
              Height="30" 
              Padding="5" 
              BorderBrush="LightGray" 
              BorderThickness="1" 
              Background="#F9F9F9" 
              >
        <ComboBoxItem Content="1"/>
        <ComboBoxItem Content="2"/>
        </ComboBox>

        <TextBlock Text="Height:" 
        Grid.Row="3" 
        FontWeight="SemiBold" 
        VerticalAlignment="Center" 
        Margin="5"/>
        <TextBox x:Name="RowCountTextBox" 
      Grid.Row="3" 
      Grid.Column="1" 
      Margin="5" 
      Padding="5" 
      Height="30" 
      BorderBrush="LightGray" 
      BorderThickness="1" 
      Background="#F9F9F9" 
    />
        <!-- Button -->
        <Button Content="OK" 
            Grid.Row="4" 
            Grid.Column="1" 
            HorizontalAlignment="Right" 
            Margin="5" 
            Padding="8,4" 
            Width="100"
            Background="#0078D7" 
            Foreground="White" 
            FontWeight="Bold" 
            BorderBrush="Transparent" 
            Cursor="Hand"
            Height="35"
            Click="OK_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#0078D7"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#005499"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#003C73"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
