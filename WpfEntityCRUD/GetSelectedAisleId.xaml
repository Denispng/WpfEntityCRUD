<Window x:Class="WpfEntityCRUD.GetSelectedAisleId"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEntityCRUD"
        mc:Ignorable="d"
        Title="GetSelectedAisleId" Height="200" Width="300">
    <Grid>
        <!-- Label and TextBox for aisle search -->
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" FontSize="16">Before deleting, make sure that all<LineBreak/> cells are unbound from items:</TextBlock>
        <TextBox x:Name="AisleIdTextBox" VerticalAlignment="Top" Margin="10,60,10,0" Height="30"/>

        <Button Content="Confirm" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="80" Click="ConfirmButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Width="80" Click="CancelButton_Click"/>
    </Grid>
</Window>
