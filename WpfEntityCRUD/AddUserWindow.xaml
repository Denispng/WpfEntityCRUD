<Window x:Class="WpfEntityCRUD.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEntityCRUD"
        mc:Ignorable="d"
        Title="AddUserWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
       


        <StackPanel Orientation="Vertical" >
            <StackPanel Orientation="Horizontal" Margin="0,10,10,10">
                <TextBlock>User Name</TextBlock>
                <TextBox Width="100" x:Name="usernameTextBox"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" >
                <TextBlock>Password</TextBlock>
                <PasswordBox Margin="9,0,0,0" Width="100" x:Name="passwordBox"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,10,10">
                <TextBlock>Role</TextBlock>
                <ComboBox Margin="35,0,0,0" Width="100" x:Name="roleComboBox">

                    <ComboBoxItem >User</ComboBoxItem>
                    <ComboBoxItem>Admin</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <Button Click="addUserBtn_Click">
                Add
                
            </Button>
        </StackPanel>


    </Grid>
</Window>
